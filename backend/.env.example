# Server
PORT=5000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/booking_platform

# Auth
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRY=24h

# Platform admin
PLATFORM_ADMIN_EMAIL=admin@boukd.com

# Stripe (platform-level, for subscription billing)
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_key

# Brevo (email/SMS)
BREVO_API_KEY=your-brevo-api-key
BREVO_FROM_EMAIL=noreply@boukd.com
BREVO_FROM_NAME=Boukd

# Frontend URL
FRONTEND_URL=http://localhost:3000
